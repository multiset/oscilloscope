%% -*- mode: erlang -*-
%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-

{deps, [
    {lager, ".*", {git, "https://github.com/basho/lager.git",
        {tag, "2.0.3"}}},
    {proper, ".*", {git, "https://github.com/manopapad/proper.git",
        {tag, "v1.1"}}},
    {meck, ".*", {git, "https://github.com/eproxus/meck.git",
        {tag, "0.8.2"}}},
    {folsom, ".*", {git, "https://github.com/boundary/folsom.git",
        {tag, "0.8.0"}}}
]}.

{erl_opts, [{parse_transform, lager_transform}]}.

{lib_dirs, ["apps"]}.

{sub_dirs, [
    "rel",
    "apps/osc",
    "apps/osc_http",
    "apps/osc_sql",
    "apps/osc_meta",
    "apps/osc_persistence"
]}.
