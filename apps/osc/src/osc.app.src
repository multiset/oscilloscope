{application, osc, [
    {description, "A distributed time-series data store"},
    {vsn, git},
    {registered, [osc_sup, osc_cache_sup]},
    {applications, [
        kernel,
        stdlib
    ]},
    {mod, {osc_app, []}},
    {env, [
        %% Hibernate caches after 30s of inactivity
        {cache_hibernate_timeout, 30000},
        {chunkifyability_threshold, 1.0}
    ]}
]}.
